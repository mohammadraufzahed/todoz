{
  "name": "todoz-backend",
  "version": "1.0.0",
  "description": "Todoz API server",
  "main": "dist/index.js",
  "scripts": {
    "dev:watch": "webpack --watch --mode=\"development\"",
    "dev:serve": "nodemon -e js -w dist dist/index.js .",
    "build": "webpack --mode=\"production\"",
    "start": "node dist/index.js",
    "docs:build": "yimp -i docs/specific/index.yaml -o docs/specific/index.out.yaml",
    "docs:serve": "serve docs/",
    "docs": "npm run docs:build && npm run docs:serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohammadraufzahed/todoz.git"
  },
  "keywords": [
    "todo",
    "todoapp",
    "react",
    "hapi",
    "nextjs",
    "database"
  ],
  "author": "Mohammad Raufzahed <mohammadraufzahed@protonmail.com>",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/mohammadraufzahed/todoz/issues"
  },
  "homepage": "https://github.com/mohammadraufzahed/todoz#readme",
  "dependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/hapi": "^20.2.1",
    "@hapi/jwt": "^2.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/hapi__jwt": "^2.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/md5": "^2.3.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "hapi-auth-jwt2": "^10.2.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.10",
    "@types/node": "^17.0.4",
    "nodemon": "^2.0.15",
    "serve": "^13.0.2",
    "swagger-cli": "^4.0.4",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
